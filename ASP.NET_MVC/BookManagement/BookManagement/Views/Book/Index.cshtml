@model IEnumerable<BookManagement.Models.Book>

@{
    ViewData["Title"] = $"Book list ({Model.Count()} items)";
}
<p class="h3">ICT Library</p>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</div>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Publisher)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td><a class="title" asp-route-id="@item.Id" asp-action="Detail">@item.Name</a></td>
                <td>@item.Author</td>
                <td>@item.Publisher</td>
                <td>@item.Year</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        <tr><td colspan="5"><strong>Tổng số: @Model.Count()</strong></td></tr>
    </tbody>
</table>
